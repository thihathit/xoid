{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "xoid": ["./packages/xoid/lib"],
      "@xoid/*": ["./packages/*/lib"],
    },
    "target": "es5",
    "jsx": "react",
    "downlevelIteration": true,
    "strict": true,
    "importHelpers": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "dist/ts-out",
    "esModuleInterop": true
  },
  "include": ["packages", "tests"]
}